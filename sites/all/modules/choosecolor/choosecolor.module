function choosecolor_form(){

    $form = array();
    
    $colors = array(t('Black'), t('Green'), t('Red'));
    //create a select field
    
    $form['color'] = array(
    '#type' => 'select',
    '#options' => drupal_map_assoc($colors),
    '#title' => t('Color'),
    );


    //create submit button
    $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Save Contact'),

    );


    //return the form
    return $form;
}

